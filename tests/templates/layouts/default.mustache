<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>{{ title }} &ndash; {{ name }} &ndash; {{ description }}</title>
  
  <!-- Stylesheets and less -->
  <link rel="stylesheet" type="text/css" media="all" href="../src/css/baseweb.min.css">
  <link rel="stylesheet" type="text/css" media="all" href="assets/css/global-tests.css">
  
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  
</head>
<body>
  
  <div class="container top">
    <header class="header">
      <p>{{ name }} <span>&ndash; {{ description }}</span></p>
    </header>
    <nav class="nav">
      <ul>
      {{ #menu }}
        <li id="{{ id }}" class="{{ class }}"><a href="{{{ url }}}">{{ text }}</a></li>
      {{ /menu }}
      </ul>
    </nav>
  </div>
  
  <div class="container middle">
    <div class="page clearfix">
      
      <h1>{{ title }}</h1>
      
      {{ > page }}
    
    </div>
  </div>
  
  <div class="container bottom">
    <footer class="footer">
      <p>Copyright &copy; {{ year }} <a href="{{{ url }}}">{{ author }}</a>. All rights reserved.</p>
    </footer>
  </div>
  
</body>
</html>