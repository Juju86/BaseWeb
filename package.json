{
  "name": "BaseWeb",
  "description": "A fresh front-end development framework.",
  "version": "0.9.0",
  "keywords": ["BaseWeb", "CSS", "LESS", "Front-end", "Framework"],
  "homepage": "http://sebnitu.github.com/baseweb/",
  "author": "Sebastian Nitu",
  "url": "http://sebnitu.com",
  "year": "2013",
  
  "repository": {
    "type": "git",
    "url": "https://github.com/sebnitu/BaseWeb.git"
  },
  
  "licenses": [{
    "type": "The MIT License (MIT)",
    "url": "http://en.wikipedia.org/wiki/MIT_License"
  }],
  
  "devDependencies": {
    "jake": "*",
    "mustache": "*",
    "less": "*",
    "uglify-js": "*",
    "node-watch": "0.3.x"
  },
  
  "paths": {
    "less"      : "src/less/",
    "css"       : "src/css/",
    "js"        : "src/js/",
    "docs"      : "docs/",
    "templates" : "docs/templates/",
    "layouts"   : "docs/templates/layouts/",
    "pages"     : "docs/templates/pages/",
    "tests"     : "tests/"
  },
  
  "watch": {
    "less":  ["./src/less/"],
    "js":    ["./src/js/baseweb.js"],
    "docs":  ["./docs/templates/"],
    "tests": ["./tests/templates/"]
  }
}
