  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  
</head>
<body>

<div id="console"></div>

<nav class="nav">
  <div class="container">
    
    <form class="menu">
      <label>
        Docs &ndash;
        <select>
        {{ #menu }}
          <option id="{{ id }}" value="{{{ url }}}" {{ select }}>{{ text }}</a></option>
        {{ /menu }}
        </select>
      </label>
    </form>
    
    <div class="title">
      <p>{{ name }} <span>&ndash; {{ description }}</span></p>
    </div>
    
  </div>
</nav>

<header class="header">
  <div class="container">
    <h1>{{ title }}</h1>
  </div>
</header>

<div class="page">
  <div class="container">
      
    {{ > page }}
    
  </div>
</div>

<!-- jQuery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>!window.jQuery && document.write(unescape('%3Cscript src="assets/js/libs/jquery.min.js"%3E%3C/script%3E'))</script>
<script>
$( '.menu select' ).change(function() {
  var url = $(this).val();
  document.location.href = url;
});
</script>

</body>
</html>