<h1 class="docs-header">Forms</h1>

<form>
  
  <label for="input-1">Text Input</label>
  <input id="input-1" type="text" placeholder="Text" required>

  <label for="textarea-1">Text Area</label>
  <textarea id="textarea-1" rows="4"></textarea>

  <label for="select-1">Select Dropdown</label>
  <select id="select-1">
    <option>Option 1</option>
    <option>Option 2</option>
    <option>Option 3</option>
    <option>Option 4</option>
  </select>
  
  <label>Checkbox Choice</label>
  <label><input type="checkbox" checked> Yes</label>
  <label><input type="checkbox"> No</label>
  <label><input type="checkbox" disabled> Maybe</label>

  <label>Radio Choice</label>
  <label><input name="radio" type="radio" checked> Yes</label>
  <label><input name="radio" type="radio"> No</label>
  <label><input name="radio" type="radio" disabled> Maybe</label>

  <button class="btn btn-default">Submit Form</button>

</form>




