<h1 class="docs-header">Forms</h1>

<form>
  <fieldset>
      
    <label for="input-1">Text Input</label>
    <input id="input-1" type="text" placeholder="Text" required>
    
    
    
    <label for="textarea-1">Text Area</label>
    <textarea id="textarea-1" rows="4"></textarea>
  
    <label for="select-1">Select Dropdown</label>
    <select id="select-1">
      <option>Option 1</option>
      <option>Option 2</option>
      <option>Option 3</option>
      <option>Option 4</option>
    </select>
    
    <label>Checkbox Choice</label>
    <div class="choice">
      <label><input type="checkbox" checked> Yes</label>
      <label><input type="checkbox"> No</label>
      <label><input type="checkbox"> Maybe</label>
    </div>
  
    <label>Radio Choice</label>
    <div class="choice">
      <label><input name="radio-1" type="radio" checked> Yes</label>
      <label><input name="radio-1" type="radio"> No</label>
      <label><input name="radio-1" type="radio"> Maybe</label>
    </div>
    
    <label>Inline Checkbox Choice</label>
    <div class="choice-inline">
      <label><input type="checkbox" checked> Yes</label>
      <label><input type="checkbox"> No</label>
      <label><input type="checkbox"> Maybe</label>
    </div>
  
    <label>Inline Radio Choice</label>
    <div class="choice-inline">
      <label><input name="radio-2" type="radio" checked> Yes</label>
      <label><input name="radio-2" type="radio"> No</label>
      <label><input name="radio-2" type="radio"> Maybe</label>
    </div>
    
    <button class="btn btn-default">Submit Form</button>

  </fieldset>
</form>




